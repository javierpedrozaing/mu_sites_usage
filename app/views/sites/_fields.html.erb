<%= render 'shared/error_messages', :object => f.object %>
<div class="form_row">
  <div class="form_label">
    <%= f.label :display_name %>
  </div>
  <div class="form_field">
    <%= f.text_field :display_name %>
  </div>
</div>
<div class="form_row">
  <div class="form_label">
    <%= f.label :short_name %>
  </div>
  <div class="form_field">
    <%= f.text_field :short_name %>
  </div>
</div>
<div class="form_row">
  <div class="form_label">
    <%= f.label :name_filter %>
    <span class="name_filter_explanation_button_inline">(<a class="dialog_open">?</a>)</span>
  </div>
  <div class="form_field">
    <%= f.text_field :name_filter %>
  </div>
</div>
<div class="form_row">
  <div class="form_label">
    <%= f.label :site_type %>
  </div>
  <div class="form_field">
    <div class="buttonset">
      <% Site::TYPES.each do |t| %>
        <%= f.radio_button :site_type, t %>
        <%= label "site_site_type", t, t.titleize %>
      <% end %>
    </div>
  </div>
</div>
<% if current_user.administrator? %>
<div class="form_row">
  <div class="form_label">
    <%= f.label :department %>
  </div>
  <div class="form_field">
    <%= f.collection_select :department_id, Department.all, :id, :display_name %>
  </div>
</div>
<% end %>